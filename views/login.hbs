<div class="container">
    <h1>Login</h1>

    <form method="POST" action="?">
        <div class="form-check">
            <input class="form-check-input" type="radio" name="role" id="radioRoleStudent" value="student" checked>
            <label class="form-check-label" for="radioRoleStudent">
                Student
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="role" id="radioRoleLecturer" value="lecturer">
            <label class="form-check-label" for="radioRoleLecturer">
                Lecturer
            </label>
        </div>

        <div class="form-group credentials">
            <label for="exampleInputEmail1">Username</label>
            <input type="text" name="username" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                placeholder="Enter username">
        </div>
        <div class="form-group credentials">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" name="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>